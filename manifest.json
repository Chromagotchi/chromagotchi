{
    "manifest_version": 2,

    "name": "Hackpet",
    "description": "A virtual (tamagotchi-esque) pet that makes its home in your web browser!",
    "version": "1.0",

    "permissions": [
       "tabs",
       "storage",
       "background"
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup/popup.html"
    },
    
    "content_scripts": [ {
        "all_frames": true,
        "css": ["css/content.css"],
       "js": [ "jquery.min.js", "content/draggable.js", "content/jquery.spritely.js", "content/stickyNodes.js",
                "content/states.js", "content/petManager.js", "content/ballManager.js", "content/bowlManager.js", "content/hackpet.js" ],
           "matches": [ "<all_urls>" ],
            "run_at": "document_start"
        }, {
            "all_frames": true,
            "js": [ "content/hackpet_end.js" ],
            "exclude_globs": [ "http://www.facebook.com", "https://www.facebook.com",
                    "http://*.facebook.com", "https://*.facebook.com" ],
            "matches": [ "http://*/*", "https://*/*" ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "script": "background.js",
        "all_frames": true,
        "run_at": "document_start"
    }
}
